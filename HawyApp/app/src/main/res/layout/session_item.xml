        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/session_category_image"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="16dp"
            tools:src="@tools:sample/avatars"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_profile_image" />

        <TextView
            android:id="@+id/session_category_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="24dp"
            android:text="Session Category"
            android:fontFamily="@font/ge_ss_three_light_19"
            app:layout_constraintEnd_toStartOf="@id/session_category_image"
            app:layout_constraintTop_toBottomOf="@id/user_profile_image" />

        <TextView
            android:id="@+id/session_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Session Title"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/ge_ss_tv_medium_10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/session_category_image" />

        <TextView
            android:id="@+id/session_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Session Distance"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/ge_ss_tv_medium_10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/session_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

