            android:id="@+id/user_profile_image"
            android:layout_width="32dp"
            android:layout_height="32dp"
            tools:src="@tools:sample/avatars"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

